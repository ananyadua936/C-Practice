#include <iostream>
#include <string>
using namespace std;
class teacher
{
    private:
    double salary;

public:
teacher()
{
    dept="computer science";  
} 
teacher(string n, string d,string s,double sal)
{
    name=n;
    dept=d;
    subject=s;
    salary=sal; 
}
string name;
string dept;
string subject; 

void changeDept(string newDept)
{
    dept=newDept;
}
void getInfo()
{
    cout<<"name:"<<name<<endl;
    cout<<"subject:"<<subject<<endl;
}

};
int main()
{
    teacher t1("Ananya","Science","Biology",35000) ;
   t1.getInfo();
  
    return  0;
} 
